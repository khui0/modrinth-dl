{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "build": "rm -rf ./dist && deno run build:linux-x86_64 && deno run build:linux-arm64 && deno run build:mac-x86_64 && deno run build:mac-arm64",
    "build:linux-x86_64": "deno compile -o ./dist/mdl-linux-x86_64 --allow-net --allow-write --allow-read --target x86_64-unknown-linux-gnu main.ts",
    "build:linux-arm64": "deno compile -o ./dist/mdl-linux-arm64 --allow-net --allow-write --allow-read --target aarch64-unknown-linux-gnu main.ts",
    "build:mac-x86_64": "deno compile -o ./dist/mdl-mac-x86_64 --allow-net --allow-write --allow-read --target x86_64-apple-darwin main.ts",
    "build:mac-arm64": "deno compile -o ./dist/mdl-mac-arm64 --allow-net --allow-write --allow-read --target aarch64-apple-darwin main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  }
}
